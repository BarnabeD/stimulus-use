{
  "name": "stimulus-use",
  "version": "0.12.1",
  "description": "A collection of standard controllers and utilities for Stimulus",
  "main": "dist/index.umd.js",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "source": "src/index.ts",
  "amdName": "StimulusUse",
  "author": "@adrienpoly",
  "license": "MIT",
  "external": "stimulus",
  "scripts": {
    "start": "webpack-dev-server --mode development --open",
    "prebuild": "$npm_execpath run clean",
    "build": "tsc -b && microbundle src/index.ts -f umd --globals stimulus=Stimulus",
    "test": "NODE_ENV=test karma start",
    "test:watch": "NODE_ENV=test karma start --auto-watch --no-single-run",
    "dev": "tsc -b -w",
    "clean": "rimraf dist *.tsbuildinfo coverage",
    "doc": "docsify serve ./docs",
    "release": "np"
  },
  "devDependencies": {
    "@babel/core": "^7.11.1",
    "@babel/plugin-proposal-class-properties": "^7.10.4",
    "@babel/plugin-transform-runtime": "^7.11.0",
    "@babel/preset-env": "^7.11.0",
    "@babel/preset-modules": "^0.1.3",
    "babel-loader": "^8.1.0",
    "chai": "^4.2.0",
    "chai-dom": "^1.8.2",
    "html2js": "^0.2.0",
    "karma": "^5.1.1",
    "karma-chai": "^0.1.0",
    "karma-chrome-launcher": "^3.1.0",
    "karma-coverage": "^2.0.3",
    "karma-fixture": "^0.2.6",
    "karma-html2js-preprocessor": "^1.1.0",
    "karma-mocha": "^2.0.1",
    "karma-mocha-reporter": "^2.2.5",
    "karma-sinon-chai": "^2.0.2",
    "karma-sourcemap-loader": "^0.3.7",
    "karma-typescript": "^5.1.0",
    "karma-webpack": "^4.0.2",
    "kind-of": "^6.0.3",
    "microbundle": "^0.12.3",
    "mocha": "^8.1.1",
    "np": "^6.4.0",
    "rimraf": "^3.0.2",
    "sinon": "^9.0.3",
    "sinon-chai": "^3.5.0",
    "sourcemap": "^0.1.0",
    "stimulus": "^1.1.1",
    "ts-loader": "^8.0.2",
    "typescript": "^3.9.7",
    "webpack": "^4.44.1",
    "webpack-cli": "^3.3.12",
    "webpack-dev-server": "^3.11.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/stimulus-use/stimulus-use"
  },
  "peerDependencies": {
    "stimulus": "^1.1.1"
  },
  "dependencies": {}
}
