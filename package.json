{
  "name": "stimulus-use",
  "version": "0.1.5",
  "description": "A collection of standard controllers and utilities for Stimulus",
  "main": "dist/index.umd.js",
  "module": "dist/index.modern.js",
  "types": "dist/index.d.ts",
  "source": "src/index.ts",
  "author": "@adrienpoly",
  "license": "MIT",
  "external": "stimulus",
  "scripts": {
    "start": "webpack-dev-server --mode development --open",
    "copy:scss": "rsync -a --include '*.scss'  src/ dist/",
    "prebuild": "yarn clean",
    "build": "microbundle src/index.ts -f modern,umd",
    "dev": "microbundle watch src/index.ts",
    "clean": "rimraf dist",
    "doc": "docsify serve ./docs",
    "release": "np"
  },
  "devDependencies": {
    "@babel/core": "^7.3.4",
    "@babel/plugin-proposal-class-properties": "^7.8.3",
    "@babel/preset-env": "^7.3.4",
    "@babel/preset-modules": "^0.1.3",
    "babel-loader": "^8.0.5",
    "css-loader": "^1.0.0",
    "microbundle": "^0.12.0",
    "mocha": "^5.2.0",
    "node-sass": "^4.14.1",
    "np": "^6.2.3",
    "stimulus": "^1.1.1",
    "style-loader": "^0.23.0",
    "typescript": "^3.8.3",
    "webpack": "^4.43.0",
    "webpack-cli": "^3.3.11",
    "webpack-dev-server": "^3.2.1"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/adrienpoly/stimulus-use.git"
  },
  "peerDependencies": {
    "stimulus": "^1.1.1"
  },
  "dependencies": {}
}
